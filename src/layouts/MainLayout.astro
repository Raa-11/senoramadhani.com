---

import { ViewTransitions } from "astro:transitions";
import SEO, { type Props as SEOProps } from "~/components/SEO.astro";
import "~/styles/global.css";

export interface Props {
    seo: SEOProps;
}

const { seo } = Astro.props;

---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <SEO {...seo} />
        <ViewTransitions/>
    </head>
    <body class="h-full bg-abu-100 p-4 md:p-10">
    <div class="fixed z-50 top-0 left-0 w-full h-4 bg-gray-900"></div>
    <div class="fixed z-50 top-0 left-0 w-40 h-7 bg-gray-900 group cursor-pointer flex items-center justify-center rounded-r-lg border border-gray-900">
        <a href="/bookmarks" class="invisible group-hover:visible font-mono text-sm text-abu-100">Bookmarks</a>
    </div>
    <slot/>
    </body>
</html>